# Copy this file to terraform.tfvars and fill in your values

aws_region  = "us-east-1"
environment = "dev"

# Database
db_instance_class = "db.t3.micro"  # Use db.t3.medium or larger for prod
db_username       = "sims_admin"
db_allowed_cidrs  = ["203.0.113.10/32"]  # Your IP/CIDR for RDS access

# Networking
availability_zones   = ["us-east-1a", "us-east-1b"]
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs    = ["10.0.1.0/24", "10.0.2.0/24"]
database_subnet_cidrs  = ["10.0.10.0/24", "10.0.11.0/24"]

# Lambda
lambda_runtime     = "nodejs20.x"
lambda_memory_size = 256
lambda_timeout     = 30

# Bedrock
bedrock_model_id  = "anthropic.claude-3-5-sonnet-20241022-v2:0"
bedrock_max_tokens = 800
