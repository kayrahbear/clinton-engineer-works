{
  "name": "sims-legacy-tracker-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend for the Sims 4 Legacy Challenge Tracker",
  "scripts": {
    "dev": "node src/dev-server.js",
    "build": "node scripts/build-lambda.js",
    "package": "npm run build",
    "db:migrate": "node ../database/scripts/migrate.js up",
    "db:migrate:status": "node ../database/scripts/migrate.js status",
    "db:migrate:down": "node ../database/scripts/migrate.js down --steps=1",
    "db:migrate:baseline": "node ../database/scripts/migrate.js baseline",
    "seed": "node ../database/scripts/seed.js",
    "seed:reference": "node ../database/scripts/seed-reference-data.js",
    "seed:legacy": "node ../database/scripts/seed-pack-legacy.js",
    "db:clear": "node ../database/scripts/clear-database.js",
    "validate:milestones": "node ../database/scripts/validate-milestones.js",
    "seed:admin": "node ../database/scripts/seed-admin-user.js"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.886.0",
    "@aws-sdk/client-secrets-manager": "^3.465.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.12.0"
  }
}
